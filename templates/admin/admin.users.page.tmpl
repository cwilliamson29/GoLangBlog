<!doctype html>
<html lang="en">
{{template "headerInclude" .}}
<body>
{{template "adminSidebar" .}}
{{template "adminNavbar" .}}
<main style="margin-top: 58px">
    <div class="container pt-4">
        <!-- Content goes here -->
        <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h3>Users Overview</h3>
                    </div>
                    <div class="card-body">
                        <nav>
                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                <button class="nav-link {{if eq .UA "userAdd"}}active{{end}}" id="nav-home-tab"
                                        data-bs-toggle="tab"
                                        data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home"
                                        aria-selected="true">Add User
                                </button>
                                <button class="nav-link {{if eq .UA "userDel"}}active{{end}}" id="nav-profile-tab"
                                        data-bs-toggle="tab"
                                        data-bs-target="#nav-profile" type="button" role="tab"
                                        aria-controls="nav-profile" aria-selected="false">Delete/Ban User
                                </button>
                                <button class="nav-link {{if eq .UA "userMod"}}active{{end}}" id="nav-contact-tab"
                                        data-bs-toggle="tab"
                                        data-bs-target="#nav-contact" type="button" role="tab"
                                        aria-controls="nav-contact" aria-selected="false">Update User
                                </button>
                            </div>
                        </nav>
                        <div class="tab-content py-4" id="nav-tabContent">
                            <div class="tab-pane fade {{if eq .UA "userAdd"}}show active{{end}}" id="nav-home"
                                 role="tabpanel" aria-labelledby="nav-home-tab">
                                <form method="post" action="/admin/user/create">
                                    <div class="row py-1">
                                        <div class="col-3 text-end">
                                            <label for="name">Name:</label>
                                        </div>
                                        <div class="col-9">
                                            <input type="text" class="form-control" id="name" name="name"
                                                   placeholder="John doe">
                                        </div>
                                    </div>
                                    <div class="row py-1">
                                        <div class="col-3 text-end">
                                            <label for="email">Email:</label>
                                        </div>
                                        <div class="col-9">
                                            <input type="email" class="form-control" id="email" name="email"
                                                   placeholder="name@example.com">
                                        </div>
                                    </div>
                                    <div class="row py-1">
                                        <div class="col-3 text-end">
                                            <label for="password">Password:</label>
                                        </div>
                                        <div class="col-9">
                                            <input type="password" class="form-control" id="password" name="password">
                                        </div>
                                    </div>
                                    <div class="row py-1">
                                        <div class="col-3 text-end">
                                            <label for="user_type">User Type:</label>
                                        </div>
                                        <div class="col-9">
                                            <select name="user_type" id="user_type">
                                                <option value="1">1 - User</option>
                                                <option value="2">2 - Moderator</option>
                                                <option value="3">3 - Admin</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 mt-3 text-center">
                                            {{with .Status.error}}
                                                <label class="text-danger">{{.}}</label>
                                            {{end}}
                                        </div>
                                        <div class="col-12 mt-3 text-center">
                                            {{with .Status.success}}
                                                <label class="text-success">{{.}}</label>
                                            {{end}}
                                        </div>
                                        <div class="col-12 mt-3 text-center">
                                            <button class="w-50 btn btn-lg btn-primary" type="submit">Create User
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="tab-pane fade {{if eq .UA "userDel"}}show active{{end}}" id="nav-profile"
                                 role="tabpanel" aria-labelledby="nav-profile-tab">
                                <form method="post" action="/admin/user/delete">
                                    <div class="row py-1">
                                        <div class="col-3 text-end">
                                            <label for="user_id">Select User</label>
                                        </div>
                                        <div class="col-9">
                                            <select name="user_id" id="user_id">
                                                {{ range $key, $value := .Data}}
                                                    <option value="{{$value.ID}}">{{$value.ID}} - {{$value.Name}}
                                                        - {{$value.Email}} {{if eq $value.Banned 1 }}- [ BANNED ]{{end}}</option>
                                                {{end}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row py-1">
                                        <div class="col-3 text-end">
                                            <label for="del_type">What Type:</label>
                                        </div>
                                        <div class="col-9">
                                            <select name="del_type" id="del_type">
                                                <option value="delete">Delete User</option>
                                                <option value="ban">Ban User</option>
                                                <option value="unban">Unban User</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 mt-3 text-center">
                                            {{with .Status.userDelError}}
                                                <label class="text-danger">{{.}}</label>
                                            {{end}}
                                        </div>
                                        <div class="col-12 mt-3 text-center">
                                            {{with .Status.userDelSuccess}}
                                                <label class="text-success">{{.}}</label>
                                            {{end}}
                                        </div>
                                        <div class="col-12 mt-3 text-center">
                                            <button class="w-50 btn btn-lg btn-primary" type="submit">Delete/Ban User
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="tab-pane fade {{if eq .UA "userMod"}}show active{{end}}" id="nav-contact"
                                 role="tabpanel" aria-labelledby="nav-contact-tab">
                                ...
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!----------------------->
    </div>
</main>

{{template "footerInclude" .}}
</body>
</html>